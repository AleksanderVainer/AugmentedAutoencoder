PTVERSION = 2
NAME = auto_pose 
MAINTAINER = Martin Sundermeyer <Martin.Sundermeyer@dlr.de>
VERSION = 0.0.1
DOCUMENTATION = https://rmc-github.robotic.dlr.de/sund-ma/auto_pose
LICENSE = Apache v2.0

SUPPORTED_LANGUAGES = Python
DEPENDS = 	sw.common.tensorflow==1, 
			sw.common.OpenCV==3, 
			sw.moro.m3vision==0.0,
			sw.common.NumPy==1
			
ARCHS = osl42-x86_64,
DESCRIPTION = 6D Pose Estimation from RGB (fast) or RGB-D (slow but more accurate), trained from a 3D model (textured or un-textured) 

EXEC_PATHS = ${ARCH}/bin
PYTHON_PATHS = ${ARCH}/lib/python2.7/site-packages

ADDITIONAL_ENV = M3_MODULE_PATH=${PKGROOT}/${ARCH}/m3_interface

[subpackage]
NAME = withICP
DEPENDS += sw.moro.meshrenderer

