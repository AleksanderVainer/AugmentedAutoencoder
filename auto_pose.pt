PTVERSION = 2
NAME = auto_pose 
MAINTAINER = Martin Sundermeyer <Martin.Sundermeyer@dlr.de>
VERSION = 0.9.0
DOCUMENTATION = https://rmc-github.robotic.dlr.de/sund-ma/auto_pose
LICENSE = Apache v2.0

SUPPORTED_LANGUAGES = Python
DEPENDS = 	sw.common.tensorflow==1, 
			sw.common.OpenCV==3, 
			sw.common.vtk==6.3.0,
			sw.common.python-six==1,
			sw.moro.m3vision==0.1,
			sw.common.NumPy==1,
			sw.common.cyglfw3==0
						
ARCHS = osl42-x86_64,
DESCRIPTION = Fast 6D Pose Estimation from RGB, trained from a 3D model (textured or un-textured) 

EXEC_PATHS = ${ARCH}/bin
PYTHON_PATHS = ${ARCH}/lib/python2.7/site-packages

ADDITIONAL_ENV = M3_ESTIMATOR_PACKAGES=auto_pose:$${M3_ESTIMATOR_PACKAGES}

[subpackage]
NAME = training
DEPENDS += sw.common.assimp/python==3.3, 
		   sw.common.python-imgaug==0

#[subpackage]
#NAME = evaluation
#DEPENDS += sw.moro.meshrenderer, matplotlib, sixd_toolkit

[pre-install]
./build.sh

[install]
install/${ARCH} => ${ARCH}
build.sh => build.sh

[post-install]
